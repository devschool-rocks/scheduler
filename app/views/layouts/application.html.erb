<!DOCTYPE html>
<html lang="en">
  <%= render 'layouts/head' %>
  <body>

    <%= render 'layouts/customer_menu' %>

    <div class="container main fill">
      <%= yield %>
    </div>

    <!-- used by javascript to determine if the
         customer is logged in -->
    <div id="currentUserId" class="hidden">
      <%= current_customer.try(:id) ||
            current_instructor.try(:id) %>
    </div>

    <%= render 'modals/login_or_register' %>
    <%= javascript_include_tag "application" %>
    <%- if content_for?(:js) %>
      <script><%= yield(:js) %></script>
    <%- end %>
  </body>
</html>
