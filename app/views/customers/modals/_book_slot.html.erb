<div class="modal" id="bookSlotModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>Book the <span id="selectedTime"></span> 
            slot on <span id="selectedDate"></span></h2>
        <h4>With Web Development Expert, Jim OKelly</h4>
      </div>
      <div class="modal-body">
        <%- if customer_signed_in? %>
          <%= form_for [:customers, current_customer.appointments.build] do |f| %>
            <%= f.hidden_field :start_at %>
            <div class="form-group">
              <label for="appointment_notes">What do you want to accomplish in this session?</label>
              <%= f.text_area :notes, autofocus: true, class: "form-control",
                  style: "height: 240px" %>
            </div>

            <div class="form-group">
              <%= f.submit value: "book appointment at the rate of #{number_to_currency(Appointment::DEFAULT_RATE)}/hr",
                           class: "btn btn-primary btn-block" %>
            </div>
          <%- end %>
        <%- end %>
      </div>
    </div>
  </div>
</div>

